<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:scrollbars="vertical"
    tools:context=".ui.viewer_and_editor.ViewerAndEditorFragment">

    <ScrollView
        android:id="@+id/scroll_text_viewer_and_editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <TextView
            android:id="@+id/text_viewer_and_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="20sp" />
    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_edit_text_viewer_and_editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <EditText
            android:id="@+id/edit_text_viewer_and_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            android:background="@null"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>